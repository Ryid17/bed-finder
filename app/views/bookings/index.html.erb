<div class="container w-75">
  <ul class="list-group">
    <% @bookings.each do |booking| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <% @bed = Bed.find(booking.bed_id) %>
        <%= @bed.category %>
         <div class="btn btn-primary">
              <%= link_to "Delete", bed_path(@bed), method: :delete, data: { confirm: "Are You Sure" }, :class => "btn" %>
            </div>
            <div class="btn btn-primary">
                <%= link_to "Edit", edit_bed_path(@bed), :class => "btn" %>
              </div>
        <span class="badge badge-primary badge-pill"><%= booking.start_date %></span>
      </li>
    <% end %>
  </ul>
</div>
